{
  "appId": "com.visualdoc.app",
  "appName": "VisualDoc",
  "webDir": "src/renderer",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#1a1a2e",
      "showSpinner": true,
      "spinnerColor": "#6c5ce7"
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#1a1a2e"
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    }
  },
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#1a1a2e"
  },
  "ios": {
    "backgroundColor": "#1a1a2e",
    "contentInset": "automatic"
  }
}
