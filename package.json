{
  "name": "visualdoc-app",
  "version": "1.0.0",
  "description": "Aplicativo de documentação visual de projetos",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --config.win.signAndEditExecutable=false",
    "cap:init": "npx cap init VisualDoc com.visualdoc.app --web-dir src/renderer",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:build:android": "npx cap sync android && cd android && ./gradlew assembleDebug",
    "cap:build:ios": "npx cap sync ios"
  },
  "author": "VisualDoc Team",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/filesystem": "^5.0.0",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/preferences": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  },
  "build": {
    "appId": "com.visualdoc.app",
    "productName": "VisualDoc",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false,
      "artifactName": "${productName}.${ext}"
    }
  }
}
