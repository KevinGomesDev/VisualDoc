{
  "name": "visualdoc-app",
  "version": "1.0.0",
  "description": "Aplicativo de documentação visual de projetos",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --config.win.signAndEditExecutable=false"
  },
  "author": "VisualDoc Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.visualdoc.app",
    "productName": "VisualDoc",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    }
  }
}
